<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bghui"
    android:orientation="vertical"
    tools:context=".WuLiuActivity" >

    <include
        android:id="@+id/wu_liu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_back_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <!-- 物流信息 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20px_in720p"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/_20px_in720p" >

                <ImageView
                    android:id="@+id/wu_liu_img"
                    android:layout_width="@dimen/_150px_in720p"
                    android:layout_height="@dimen/_150px_in720p"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_30px_in720p"
                    android:layout_toRightOf="@+id/wu_liu_img"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wu_liu_state"
                            android:textColor="@color/texthei"
                            android:textSize="@dimen/_30px_in720p" />

                        <TextView
                            android:id="@+id/wu_liu_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20px_in720p"
                            android:text="已签收"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_30px_in720p" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5px_in720p"
                        android:layout_marginTop="@dimen/_5px_in720p"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wu_liu_lai_yuan"
                            android:textColor="@color/texthui"
                            android:textSize="@dimen/_25px_in720p" />

                        <TextView
                            android:id="@+id/wu_liu_lai_yuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20px_in720p"
                            android:text="邮政快递包裹"
                            android:textColor="@color/texthui"
                            android:textSize="@dimen/_25px_in720p" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5px_in720p"
                        android:layout_marginTop="@dimen/_5px_in720p"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wu_liu_order_number"
                            android:textColor="@color/texthui"
                            android:textSize="@dimen/_25px_in720p" />

                        <TextView
                            android:id="@+id/wu_liu_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20px_in720p"
                            android:text="3434343434343"
                            android:textColor="@color/texthui"
                            android:textSize="@dimen/_25px_in720p" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5px_in720p"
                        android:layout_marginTop="@dimen/_5px_in720p"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wu_liu_phone"
                            android:textColor="@color/texthui"
                            android:textSize="@dimen/_25px_in720p" />

                        <TextView
                            android:id="@+id/wu_liu_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20px_in720p"
                            android:text="121212"
                            android:textColor="@color/texthui"
                            android:textSize="@dimen/_25px_in720p" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <!-- 派送人 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20px_in720p"
                android:background="@color/white"
                android:padding="@dimen/_20px_in720p" >

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="@dimen/_80px_in720p"
                    android:layout_height="@dimen/_80px_in720p"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="#cccccc" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_20px_in720p"
                    android:layout_toRightOf="@+id/img"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wu_liu_preson"
                        android:textColor="@color/texthui"
                        android:textSize="@dimen/_30px_in720p" />

                    <TextView
                        android:id="@+id/wu_liu_preson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小王"
                        android:textColor="@color/texthei"
                        android:textSize="@dimen/_35px_in720p" />
                </LinearLayout>

                <TextView
                    android:id="@+id/wu_liu_preson_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="12121212"
                    android:textColor="@color/texthui"
                    android:textSize="@dimen/_30px_in720p" />
            </RelativeLayout>

            <!-- 物流详情 列表 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20px_in720p"
                android:background="@color/white"
                android:orientation="vertical" >

                <!-- 1 -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200px_in720p"
                    android:background="@color/white"
                    android:padding="@dimen/_20px_in720p" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="@dimen/_30px_in720p"
                        android:layout_height="@dimen/_30px_in720p"
                        android:layout_marginLeft="@dimen/_40px_in720p"
                        android:layout_marginTop="@dimen/_20px_in720p"
                        android:src="@drawable/point_select" />

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_150px_in720p"
                        android:background="@drawable/news_information_tv_bg"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="2"
                            android:text="【漕河泾商务投递部】已投递，投递员：xxx,签收人:xxx"
                            android:textColor="@color/blue" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2016-5-20 13:34:34"
                            android:textColor="@color/blue" />
                    </LinearLayout>

                    <!--
                 <View
                android:layout_width="@dimen/_2px_in720p"
                android:layout_height="@dimen/_120px_in720p"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/imageView1"
                android:layout_marginLeft="@dimen/_55px_in720p"
                android:background="@color/texthui" />
                    -->

                </RelativeLayout>

                <!-- 2 -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200px_in720p"
                    android:background="@color/white"
                    android:padding="@dimen/_20px_in720p" >

                    <ImageView
                        android:layout_width="@dimen/_20px_in720p"
                        android:layout_height="@dimen/_20px_in720p"
                        android:layout_marginLeft="@dimen/_40px_in720p"
                        android:layout_marginTop="@dimen/_20px_in720p"
                        android:src="@drawable/point_normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_150px_in720p"
                        android:background="@drawable/news_information_tv_bg"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="【漕河泾商务投递部】正在投递，电话:"
                            android:textColor="@color/texthui" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="12121212"
                            android:textColor="@color/texthui" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2016-5-20 13:34:34"
                            android:textColor="@color/texthui" />
                    </LinearLayout>
                </RelativeLayout>

                <!-- 3 -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200px_in720p"
                    android:background="@color/white"
                    android:padding="@dimen/_20px_in720p" >

                    <ImageView
                        android:layout_width="@dimen/_20px_in720p"
                        android:layout_height="@dimen/_20px_in720p"
                        android:layout_marginLeft="@dimen/_40px_in720p"
                        android:layout_marginTop="@dimen/_20px_in720p"
                        android:src="@drawable/point_normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_150px_in720p"
                        android:background="@drawable/news_information_tv_bg"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="到达【漕河泾商务投递部】"
                            android:textColor="@color/texthui" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2016-5-20 13:34:34"
                            android:textColor="@color/texthui" />
                    </LinearLayout>
                </RelativeLayout>

                <!-- 4 -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200px_in720p"
                    android:background="@color/white"
                    android:padding="@dimen/_20px_in720p" >

                    <ImageView
                        android:layout_width="@dimen/_20px_in720p"
                        android:layout_height="@dimen/_20px_in720p"
                        android:layout_marginLeft="@dimen/_40px_in720p"
                        android:layout_marginTop="@dimen/_20px_in720p"
                        android:src="@drawable/point_normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_150px_in720p"
                        android:background="@drawable/news_information_tv_bg"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="离开【上海】，下一站【漕河泾】"
                            android:textColor="@color/texthui" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2016-5-20 13:34:34"
                            android:textColor="@color/texthui" />
                    </LinearLayout>
                </RelativeLayout>

                <!-- 5 -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200px_in720p"
                    android:background="@color/white"
                    android:padding="@dimen/_20px_in720p" >

                    <ImageView
                        android:layout_width="@dimen/_20px_in720p"
                        android:layout_height="@dimen/_20px_in720p"
                        android:layout_marginLeft="@dimen/_40px_in720p"
                        android:layout_marginTop="@dimen/_20px_in720p"
                        android:src="@drawable/point_normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_150px_in720p"
                        android:background="@drawable/news_information_tv_bg"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="到达【上海】"
                            android:textColor="@color/texthui" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2016-5-20 13:34:34"
                            android:textColor="@color/texthui" />
                    </LinearLayout>
                </RelativeLayout>

                <!-- 6 -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200px_in720p"
                    android:background="@color/white"
                    android:padding="@dimen/_20px_in720p" >

                    <ImageView
                        android:layout_width="@dimen/_20px_in720p"
                        android:layout_height="@dimen/_20px_in720p"
                        android:layout_marginLeft="@dimen/_40px_in720p"
                        android:layout_marginTop="@dimen/_20px_in720p"
                        android:src="@drawable/point_normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_150px_in720p"
                        android:background="@drawable/news_information_tv_bg"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="【广州】广州 已发出"
                            android:textColor="@color/texthui" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2016-5-20 13:34:34"
                            android:textColor="@color/texthui" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>