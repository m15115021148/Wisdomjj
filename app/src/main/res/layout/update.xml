<?xml version="1.0" encoding="utf-8"?>
<!-- 正在下载页面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_520px_in720p"
    android:layout_height="@dimen/_670px_in720p"
    android:background="@drawable/newlogin_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/_520px_in720p"
        android:layout_height="@dimen/_364px_in720p"
        android:background="@drawable/downloadbg1"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_284px_in720p"
            android:gravity="center" >

            <TextView
                android:layout_width="@dimen/_164px_in720p"
                android:layout_height="@dimen/_164px_in720p"
                android:background="@drawable/icon"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80px_in720p"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新版本："
                android:textColor="#ffffff"
                android:textSize="@dimen/_27px_in720p" />

            <TextView
                android:id="@+id/download_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v0.0.0"
                android:textColor="#ffffff"
                android:textSize="@dimen/_27px_in720p" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginLeft="@dimen/_25px_in720p"
                android:text="大小："
                android:textSize="@dimen/_27px_in720p" />

            <TextView
                android:id="@+id/download_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0KB"
                android:textColor="#ffffff"
                android:textSize="@dimen/_27px_in720p" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_520px_in720p"
        android:layout_height="@dimen/_364px_in720p"
        android:background="@drawable/downloadbg2"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40px_in720p"
            android:textSize="@dimen/_31px_in720p"
            android:text="正在下载..."
            android:textColor="#333333" />

        <ProgressBar
            android:id="@+id/progressbar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/_400px_in720p"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:max="100"
            android:progress="0" />
        

        <TextView
            android:id="@+id/currentPos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textColor="#333333" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="@dimen/_180px_in720p"
            android:layout_height="@dimen/_58px_in720p"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/downloadhid"
            android:layout_marginTop="@dimen/_15px_in720p"
             />
    </LinearLayout>

</LinearLayout>