<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/show_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/home_pager_title_light"
        android:gravity="center"
        android:padding="@dimen/_20px_in720p"
        android:text="温馨提示"
        android:textColor="@color/text"
        android:textSize="@dimen/_40px_in720p" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_30px_in720p" >

        <TextView
            android:id="@+id/show_txt"
            android:text="商家拒绝了你的退款请求，您现在可以申请申请仲裁"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/_15px_in720p"
            android:textColor="@color/text"
            android:textSize="@dimen/_35px_in720p" />
    </LinearLayout>

</LinearLayout>