<?xml version="1.0" encoding="utf-8"?>
<!-- 收货地址页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:background="@color/home_pager_title"
        android:padding="@dimen/_15px_in720p" >

        <LinearLayout
            android:id="@+id/base_back_lay"
            android:layout_width="@dimen/_80px_in720p"
            android:layout_height="@dimen/_80px_in720p"
            android:layout_centerVertical="true"
            android:gravity="center" >

            <TextView
                android:id="@+id/back_tv"
                android:layout_width="@dimen/_20px_in720p"
                android:layout_height="@dimen/_30px_in720p"
                android:background="@drawable/back_index" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/user_baoliao"
            android:textSize="@dimen/_36px_in720p" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20px_in720p"
        android:layout_marginTop="@dimen/_80px_in720p"
        android:background="@color/gxian" />

    <ListView
        android:id="@+id/baoliao_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_100px_in720p"
        android:layout_marginTop="@dimen/_100px_in720p" >
    </ListView>

    <TextView
        android:textSize="@dimen/_36px_in720p"
        android:id="@+id/baoliao_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
        android:gravity="center"
        android:text="@string/baoliao_title"
        android:textColor="@color/white" />

</RelativeLayout>