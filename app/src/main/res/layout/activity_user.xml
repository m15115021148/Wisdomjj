<?xml version="1.0" encoding="utf-8"?>
<!-- 设置页面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_xian"
    android:id="@+id/layout"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:background="@color/home_pager_title"
        android:padding="@dimen/_15px_in720p" >

        <LinearLayout
            android:id="@+id/base_back_lay"
            android:layout_width="@dimen/_80px_in720p"
            android:layout_height="@dimen/_80px_in720p"
            android:layout_centerVertical="true"
            android:gravity="center" >

            <TextView
                android:id="@+id/back_tv"
                android:layout_width="@dimen/_20px_in720p"
                android:layout_height="@dimen/_30px_in720p"
                android:background="@drawable/back_index" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/user_title"
            android:textSize="@dimen/_36px_in720p" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20px_in720p"
        android:background="@color/user_xian" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160px_in720p"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_weight="3"
            android:gravity="center|left"
            android:text="@string/user_touxiang"
            android:textSize="@dimen/_31px_in720p" />

        <LinearLayout
            android:id="@+id/user_author"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:layout_weight="6"
            android:gravity="center|right"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/touxiang"
                android:layout_width="@dimen/_120px_in720p"
                android:layout_height="@dimen/_120px_in720p"
                android:layout_marginRight="@dimen/_20px_in720p"
                android:src="@drawable/addpic" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_20px_in720p"
            android:layout_height="@dimen/_30px_in720p"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:background="@drawable/back_xym" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px_in720p"
        android:background="@color/user_xian" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120px_in720p"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_weight="3"
            android:gravity="center|left"
            android:text="@string/user_zhanghao"
            android:textSize="@dimen/_31px_in720p" />

        <TextView
            android:id="@+id/username"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:layout_weight="6"
            android:gravity="center|right"
            android:text="XXX" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px_in720p"
        android:layout_marginLeft="@dimen/_20px_in720p"
        android:layout_marginRight="@dimen/_20px_in720p"
        android:background="@color/user_xian" />

    <RelativeLayout
        android:id="@+id/user_name_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120px_in720p"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:gravity="center_vertical"
            android:text="@string/user_nicheng"
            android:textColor="#333333"
            android:textSize="@dimen/_31px_in720p" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_60px_in720p"
            android:gravity="center"
            android:text="XXX" />

        <ImageView
            android:layout_width="@dimen/_20px_in720p"
            android:layout_height="@dimen/_30px_in720p"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:background="@drawable/back_xym" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px_in720p"
        android:layout_marginLeft="@dimen/_20px_in720p"
        android:layout_marginRight="@dimen/_20px_in720p"
        android:background="@color/user_xian" />
