<?xml version="1.0" encoding="utf-8"?>
<!-- 新增收货地址页面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:background="@color/home_pager_title"
        android:paddingLeft="@dimen/_20px_in720p"
        android:paddingRight="@dimen/_20px_in720p" >

        <ImageView
            android:id="@+id/back_tv"
            android:layout_width="@dimen/_35px_in720p"
            android:layout_height="@dimen/_35px_in720p"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/address_add_title"
            android:textSize="@dimen/_36px_in720p" />

        <TextView
            android:id="@+id/address_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:text="@string/address_save"
            android:textColor="@color/texthei"
            android:textSize="@dimen/_31px_in720p" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:layout_marginLeft="@dimen/_20px_in720p"
        android:layout_marginRight="@dimen/_20px_in720p"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_preson"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_36px_in720p"
            android:text="收货人    " />

        <EditText
            android:layout_toRightOf="@+id/tv_preson"
            android:layout_centerVertical="true"
            android:id="@+id/address_preson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40px_in720p"
            android:background="@color/white"
            android:textColor="#333333"
            android:textColorHint="#cccccc"
            android:layout_weight="4"
            android:textSize="@dimen/_31px_in720p" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bghui" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:layout_marginLeft="@dimen/_20px_in720p"
        android:layout_marginRight="@dimen/_20px_in720p"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_phone"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_36px_in720p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_phone" />

        <EditText
            android:id="@+id/address_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40px_in720p"
            android:layout_marginRight="@dimen/_60px_in720p"
            android:layout_toRightOf="@+id/tv_phone"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:inputType="phone"
            android:textColor="#333333"
            android:textColorHint="#cccccc"
            android:textSize="@dimen/_31px_in720p" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bghui" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:layout_marginLeft="@dimen/_20px_in720p"
        android:layout_marginRight="@dimen/_20px_in720p"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_province"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_36px_in720p"
            android:text="@string/address_province" />

        <Spinner
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_province"
            android:prompt="@string/address_selected"
            android:id="@+id/province"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100px_in720p"
            android:layout_marginLeft="@dimen/_40px_in720p"
            android:padding="@dimen/_5px_in720p"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bghui" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:layout_marginLeft="@dimen/_20px_in720p"
        android:layout_marginRight="@dimen/_20px_in720p"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_city"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_36px_in720p"
            android:text="@string/address_city" />

        <Spinner
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_city"
            android:prompt="@string/address_selected"
            android:id="@+id/city"
            android:padding="@dimen/_5px_in720p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40px_in720p"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bghui" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:layout_marginLeft="@dimen/_20px_in720p"
        android:layout_marginRight="@dimen/_20px_in720p"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_36px_in720p"
            android:text="@string/address_district" />

        <Spinner
            android:layout_toRightOf="@+id/tv_dis"
            android:prompt="@string/address_selected"
            android:id="@+id/area"
            android:layout_centerVertical="true"
            android:padding="@dimen/_5px_in720p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40px_in720p"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bghui" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_240px_in720p"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/address_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:enabled="true"
            android:gravity="top"
            android:hint="请填写详细地址"
            android:inputType="textMultiLine"
            android:maxLength="200"
            android:minLines="8"
            android:padding="@dimen/_20px_in720p"
            android:textColor="#333333"
            android:textColorHint="#cccccc"
            android:textSize="@dimen/_31px_in720p" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bghui" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:layout_marginLeft="@dimen/_20px_in720p"
        android:layout_marginRight="@dimen/_20px_in720p"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="@dimen/_36px_in720p"
            android:text="@string/address_set_default" />

        <CheckBox
            android:id="@+id/address_is_default"
            android:layout_width="@dimen/_100px_in720p"
            android:layout_height="@dimen/_70px_in720p"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:background="@drawable/jpush_press_bg"
            android:checked="false"
            android:button="@null" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bghui" />

</LinearLayout>