<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_20px_in720p" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/sub_pay_sure"
        android:orientation="vertical" >

        <TextView
            android:textSize="@dimen/_31px_in720p"
                android:textColor="@color/text"
            android:padding="@dimen/_10px_in720p"
            android:id="@+id/sub_pay_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:textSize="@dimen/_31px_in720p"
                android:textColor="@color/text"
                android:id="@+id/sub_pay_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共计1件" />
            <TextView
                android:textSize="@dimen/_31px_in720p"
                android:textColor="@color/text"
                android:layout_marginLeft="@dimen/_20px_in720p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计:" />
            
            <TextView
                android:id="@+id/sub_pay_money"
                android:textSize="@dimen/_31px_in720p"
                android:textColor="@color/red"
                android:layout_marginLeft="@dimen/_30px_in720p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/sub_pay_sure"
        android:layout_width="@dimen/_150px_in720p"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/red"
        android:gravity="center"
        android:padding="@dimen/_5px_in720p"
        android:text="去结算"
        android:textColor="@color/white" />

</RelativeLayout>