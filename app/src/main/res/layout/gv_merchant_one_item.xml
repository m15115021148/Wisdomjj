<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:layout_marginTop="@dimen/_10px_in720p"
        android:id="@+id/merchant_img"
        android:layout_width="@dimen/_100px_in720p"
        android:layout_height="@dimen/_130px_in720p"
        android:src="@drawable/tops_v_bg" />

    <TextView
        android:layout_marginTop="@dimen/_5px_in720p"
        android:id="@+id/merchant_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是one"
        android:lines="1"
        android:textColor="@color/text"
        android:textSize="@dimen/_27px_in720p"
        />

</LinearLayout>
