<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_220px_in720p" >

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="@dimen/_100px_in720p"
            android:layout_height="match_parent"
            android:gravity="center" >

            <CheckBox
                android:id="@+id/shopping_list_cb"
                android:layout_width="@dimen/_40px_in720p"
                android:layout_height="@dimen/_40px_in720p"
                android:background="@drawable/shopping_cart_check_press"
                android:button="@null"
                android:focusable="false"
                android:gravity="center" />
        </LinearLayout>

        <ImageView
            android:id="@+id/shopping_icon"
            android:layout_width="@dimen/_200px_in720p"
            android:layout_height="@dimen/_160px_in720p"
            android:layout_margin="@dimen/_20px_in720p"
            android:layout_toRightOf="@+id/l1" />

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10px_in720p"
            android:layout_toRightOf="@+id/shopping_icon"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_20px_in720p" >

                <TextView
                    android:id="@+id/shopping_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_200px_in720p"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="XXXXXXXXXXXXXXXXXXXXX"
                    android:textColor="@color/text" />

                <LinearLayout
                    android:layout_width="@dimen/_180px_in720p"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_20px_in720p"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/reduce"
                        android:layout_width="@dimen/_40px_in720p"
                        android:layout_height="@dimen/_40px_in720p"
                        android:background="@drawable/number_reduce" />

                    <TextView
                        android:id="@+id/num"
                        android:layout_width="@dimen/_40px_in720p"
                        android:layout_height="@dimen/_40px_in720p"
                        android:layout_marginLeft="@dimen/_10px_in720p"
                        android:background="@drawable/number_bg"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="@dimen/_27px_in720p" />

                    <TextView
                        android:id="@+id/add"
                        android:layout_width="@dimen/_40px_in720p"
                        android:layout_height="@dimen/_40px_in720p"
                        android:layout_marginLeft="@dimen/_10px_in720p"
                        android:background="@drawable/number_add" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/shopping_icon"
            android:layout_marginLeft="@dimen/_10px_in720p"
            android:layout_toRightOf="@+id/shopping_icon" >

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_120px_in720p"
                android:text="￥188.00"
                android:textColor="@color/red" />

            <ImageView
                android:id="@+id/del"
                android:layout_width="@dimen/_40px_in720p"
                android:layout_height="@dimen/_40px_in720p"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_20px_in720p"
                android:gravity="right|center_vertical"
                android:src="@drawable/delete" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/is_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout1"
            android:layout_marginLeft="@dimen/_10px_in720p"
            android:layout_marginTop="@dimen/_20px_in720p"
            android:layout_toRightOf="@+id/shopping_icon"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色："
                android:textColor="@color/texthui"
                android:textSize="@dimen/_27px_in720p" />

            <TextView
                android:id="@+id/color"
                android:layout_width="@dimen/_120px_in720p"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="红色"
                android:textColor="@color/texthui"
                android:textSize="@dimen/_27px_in720p" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尺寸："
                android:textColor="@color/texthui"
                android:textSize="@dimen/_27px_in720p" />

            <TextView
                android:id="@+id/size"
                android:layout_width="@dimen/_120px_in720p"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="XXL"
                android:textColor="@color/texthui"
                android:textSize="@dimen/_27px_in720p" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>