<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题栏 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:background="@color/home_pager_title"
        android:paddingLeft="@dimen/_20px_in720p"
        android:paddingRight="@dimen/_20px_in720p" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_70px_in720p"
            android:layout_height="@dimen/_70px_in720p"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/_20px_in720p"
            android:paddingLeft="@dimen/_1px_in720p"
            android:paddingRight="@dimen/_40px_in720p"
            android:paddingTop="@dimen/_20px_in720p"
            android:src="@drawable/back_img" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:text="@string/hotle_desc"
            android:textSize="@dimen/_36px_in720p" />

        <CheckBox
            android:button="@null"
            android:id="@+id/collect"
            android:layout_width="@dimen/_40px_in720p"
            android:layout_height="@dimen/_40px_in720p"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:layout_toLeftOf="@+id/share"
            android:background="@drawable/collect_status" />

        <TextView
            android:id="@+id/share"
            android:layout_width="@dimen/_40px_in720p"
            android:layout_height="@dimen/_40px_in720p"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/foods_share" />
    </RelativeLayout>

</LinearLayout>