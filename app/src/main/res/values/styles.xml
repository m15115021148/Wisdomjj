<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
   <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- 商品 立即购买 窗口样式 -->    	
    <style name="FloatingBuy" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparency</item>　　
　　		<item name="android:windowIsTranslucent">true</item>　　
　　		<item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
    </style>
    
    <!-- 底部菜单style -->
    <style name="menu_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/menu_bg</item>
    </style>
    
    <!-- 注册style -->
    <style name="register_psw_sure_et_style">
        <item name="android:background">@drawable/login_shape</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">@dimen/_40px_in720p</item>
        <item name="android:textSize">@dimen/_30px_in720p</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:textColorHint">#dedede</item>
        <item name="android:textColor">#333333</item>
    </style>
    <style name="register_psw_sure_tv_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">@dimen/_400px_in720p</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_35px_in720p</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <!-- 天气页面style -->
    <style name="weather_tv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_40px_in720p</item>
        <item name="android:padding">@dimen/_15px_in720p</item>
    </style>
    <!-- 几个dialog -->
      <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@color/transparency</item>
        <item name="android:windowNoTitle">true</item>
    </style>
     <style name="ChangeDialog" parent="@style/CustomDialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="AppTheme.Dialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/transparency</item>
</style>
    
     <!-- 商家 页面 的gridview style -->
     <style name="Merchant_gridview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:numColumns">3</item>
        <item name="android:scrollbars">none</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">@dimen/_20px_in720p</item>
        <item name="android:verticalSpacing">@dimen/_20px_in720p</item>
        <item name="android:layout_margin">@dimen/_10px_in720p</item>
     </style>     
     <style name="Merchant_tv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_10px_in720p</item>
        <item name="android:textSize">@dimen/_27px_in720p</item>
        <item name="android:textColor">@color/black</item> 
        <item name="android:layout_marginLeft">@dimen/_15px_in720p</item>       
     </style>
     
     <!-- 搜索页面 -->
     <style name="Search_tv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_30px_in720p</item>
        <item name="android:textSize">@dimen/_30px_in720p</item>
        <item name="android:textColor">@color/blue</item> 
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/search_tv_item_bg</item>
     </style>
    
     <!-- 商品详情页面  -->
     <style name="shopping_des_tv_style">
         <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_31px_in720p</item>
        <item name="android:textColor">@color/ghui</item> 
        <item name="android:gravity">center_vertical</item>
     </style>
     <style name="shopping_des_buy_tv_style">
          <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_27px_in720p</item>
        <item name="android:textColor">@drawable/shopping_des_buy_tv_bg</item> 
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/_10px_in720p</item>
        <item name="android:layout_marginRight">@dimen/_20px_in720p</item>
        <item name="android:background">@drawable/shopping_desc_buy_tv</item>
        <item name="android:button">@null</item>
     </style>
     <style name="shopping_des_buy_tv_number">
        <item name="android:layout_width">@dimen/_60px_in720p</item>
        <item name="android:layout_height">@dimen/_60px_in720p</item>
        <item name="android:textSize">@dimen/_38px_in720p</item>
        <item name="android:textColor">@color/black</item> 
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_10px_in720p</item>
        <item name="android:layout_marginRight">@dimen/_20px_in720p</item>
     </style>
     <style name="shopping_des_buy_tv_number_one">
        <item name="android:layout_width">@dimen/_100px_in720p</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_35px_in720p</item>
        <item name="android:textColor">@color/black</item> 
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_10px_in720p</item>
        <item name="android:layout_marginRight">@dimen/_20px_in720p</item>
        <item name="android:background">@drawable/shopping_desc_buy_number</item>
     </style>
     
     <!-- 我的订单 页面 style -->
     <style name="my_order_list">
         <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_100px_in720p</item>
        <item name="android:textSize">@dimen/_32px_in720p</item>
        <item name="android:textColor">@drawable/my_order_list_bg</item> 
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/my_self_order_status_bg</item>
        <item name="android:button">@null</item>
     </style>
     
     <style name="my_order_foods_list">
         <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_100px_in720p</item>
        <item name="android:textSize">@dimen/_32px_in720p</item>
        <item name="android:textColor">@drawable/my_order_list_bg</item> 
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/my_self_order_status_bg</item>
        <item name="android:button">@null</item>
     </style>
     
     <!-- ratingBar  Style -->
     <style name="my_rating_bar_style" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/room_rating_bar</item>
       <item name="android:minHeight">@dimen/_65px_in720p</item>
       <item name="android:maxHeight">@dimen/_65px_in720p</item>
     </style>
     
     <style name="my_grade_bar_style" parent="@android:style/Widget.RatingBar">
       <item name="android:progressDrawable">@drawable/rb_grade_bar</item>
       <item name="android:numStars">5</item>
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">@dimen/_34px_in720p</item>
	   <item name="android:minHeight">@dimen/_34px_in720p</item>  
       <item name="android:maxHeight">@dimen/_34px_in720p</item>
       <item name="android:rating">2</item>
       <item name="android:isIndicator">true</item>
     </style>
     
     <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
     
</resources>
